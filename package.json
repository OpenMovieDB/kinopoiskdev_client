{
  "name": "@openmoviedb/kinopoiskdev_client",
  "version": "1.3.0",
  "description": "JS/TS библиотека для kinopoisk.dev API",
  "type": "module",
  "main": "dist/bundle.esm.js",
  "browser": "dist/bundle.iife.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w & nodemon dist/bundle.esm.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "jest",
    "release": "release-please --",
    "publish": "npm run build && npm publish --access public "
  },
  "keywords": [],
  "author": "mdwitr0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenMovieDB/kinopoiskdev_client.git"
  },
  "bugs": {
    "url": "https://github.com/OpenMovieDB/kinopoiskdev_client/issues"
  },
  "homepage": "https://github.com/OpenMovieDB/kinopoiskdev_client#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "jest": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "release-please": "^15.11.0",
    "rollup": "^3.25.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
